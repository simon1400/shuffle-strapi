{
  "collectionName": "components_content_image_text_ctas",
  "info": {
    "displayName": "ImageTextCta",
    "icon": "picture",
    "description": "Block with image, title, text and CTA button"
  },
  "options": {},
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "cta": {
      "type": "component",
      "component": "action.cta",
      "repeatable": false
    },
    "text": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    }
  }
}
