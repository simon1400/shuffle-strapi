{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Articles",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "shortContent": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "required": true,
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "shortImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "fullMedia": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "fullContent": {
      "type": "customField",
      "options": {
        "preset": "defaultHtml"
      },
      "required": true,
      "customField": "plugin::ckeditor5.CKEditor"
    },
    "metaData": {
      "displayName": "metaData",
      "type": "component",
      "repeatable": false,
      "component": "seo.meta-data",
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "dynamicComponents": {
      "type": "dynamiczone",
      "components": [
        "content.short-artciles",
        "content.logo-carousel",
        "content.description-block",
        "content.cta-block",
        "content.content-item"
      ]
    }
  }
}
