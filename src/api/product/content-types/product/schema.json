{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.short-artciles",
        "content.logo-carousel",
        "content.description-block",
        "content.cta-block",
        "content.content-item",
        "content.compare-table",
        "content.image-text-cta",
        "content.video-gallery"
      ],
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "metaData": {
      "type": "component",
      "component": "seo.meta-data",
      "repeatable": false
    },
    "Parameters": {
      "type": "component",
      "component": "content-comp.parameter",
      "repeatable": true,
      "required": true
    },
    "benefits": {
      "type": "component",
      "component": "content-comp.description-block-comp",
      "repeatable": true,
      "required": false
    },
    "shortIcon": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "label": {
      "type": "component",
      "component": "content-comp.label",
      "repeatable": true
    },
    "compare": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product"
    },
    "sortOrder": {
      "type": "integer",
      "unique": false
    },
    "shortContent": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "shortImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
